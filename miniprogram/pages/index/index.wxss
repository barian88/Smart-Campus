@import '../../style/icon/iconfont.wxss';

.iconfont {
  font-size: 16px;
}

.img {
  height: 150rpx;
  width: 150rpx;
  margin-right: 32rpx;
}

.container:nth-child(1) {
  display: flex;
  align-items: flex-end;
  padding-top: var(--padding-top--);
}

.date-background .title {
  font-size: x-large;
  font-weight: bold;
  color: #fff;
}

.date-background {
  background-image: linear-gradient(144deg, #ca80ff, #8e7cff 50%, #32deeb);
  width: 100%;
  height: 460rpx;
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
}

.date-background .container {
  padding: 24rpx 32rpx;
}

.date {
  font-size: x-large;
  text-align: end;
  color: #fff;
}

.weekday {
  font-size: large;
  color: #fff;
  margin-left: 24rpx;
}

.welcome {
  margin-top: 16rpx;
  color: #fff;
}


.subscribe-count {
  margin: -50rpx auto;
  margin-bottom: 0;
  width: fit-content;
  padding: 32rpx 48rpx;
  border-radius: 999rpx;
  background-color: #fff;
  box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
  display: flex;
  align-items: center;
}

.subscribe-count .number {
  font-size: x-large;
  font-weight: bold;
  margin: 0 64rpx;
}

.subscribe-count .iconfont {
  font-size: xx-large;
}

.function .iconfont {
  font-size: xx-large;
}

.function {
  background-color: #fff;
  margin-top: 24rpx;
  padding: 0 36rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  border-radius: 24rpx;
}

.function:nth-child(2) {
  border-left: solid #8e7cff 24rpx;
}

.function:nth-child(3) {
  border-left: solid #32deeb 24rpx;

}

.function:nth-child(4) {
  border-left: solid #ffcc7e 24rpx;
}

.function .number {
  font-size: xx-large;
  margin-left: 24rpx;
  width: 120rpx;
}

.function .text {
  margin: 0 24rpx;
}


.card-list .divider {
  height: 100rpx;
  width: 2rpx;
  background-color: #f5f5f5;
  margin-right: 24rpx;
}

.latest-event .title,
.card-list .title {
  font-size: larger;
  font-weight: bold;
}

.latest-event,
.card-list {
  margin: 24rpx 24rpx 32rpx 24rpx;
}

.event-card {
  background-color: #fff;
  margin-top: 24rpx;
  border-radius: 24rpx;
  padding: 0 36rpx;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #555;
}

.event-card .iconfont {
  font-size: x-large;
}

.icon-zhengque {
  color: #67C23A;
}

.icon-gantanhao {
  color: #E6A23C;
}

.icon-didian {
  font-size: large !important;
  margin-right: 12rpx;
}

.type {
  font-size: large;
  margin-right: 32rpx;
  color: #000000;
}

.time {
  margin-top: 16rpx;
}