@import '../../style/icon/iconfont.wxss';

.list-item {
  display: flex;
  padding: 24rpx 24rpx;
  font-size: small;
  background-color: #fff;
  margin: 24rpx;
  border-radius: 24rpx;
}

.list-item:active {
  background-color: #f5f5f5;
}

.list-item image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 14rpx;
}

.list-item .left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 24rpx;
}

.list-item .right {
  margin-left: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list-item .left,
.list-item .right {
  padding: 12rpx 0;
}

.list-item .type {
  font-size: large;
  margin-bottom: 6rpx;
}

.list-item .comment {
  color: #555;
}

.list-item .time,
.list-item .area {
  display: flex;
  align-items: center;
  color: #555;
}

.list-item .iconfont {
  color: black;
  margin-right: 8rpx;
  font-size: 16px;
}

.list-item .status {
  width: fit-content;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  color: #fff;
}

.pos {
  background-color: #67C23A;
}

.neg {
  background-color: #E6A23C
}

.list-item .but-detail {
  color: #555;
  border-bottom: 2rpx solid #555;
}

