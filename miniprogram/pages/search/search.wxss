.pop .up-container image {
  height: 420rpx;
  width: 420rpx;
  border-radius: 24rpx;
  margin-right: 48rpx;
}

.pop .up-container {
  display: flex;
  padding: 24rpx;
}

.pop .right {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.pop .type,
.pop .area,
.pop .status {
  display: flex;
  align-items: center;
  font-size: large !important;
}

.pop .type {
  font-weight: bold;
}

.pop .status {
  width: fit-content;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  color: #fff;
}

.pop .iconfont {
  margin-right: 12rpx;
}

.pop .time {
  display: flex;
  align-items: center;
  color: #555;
  margin-bottom: 8rpx;
}

.pop .time:nth-child(2) {
  margin-bottom: 24rpx;
}

.pop .time .iconfont {
  font-size: 16px;
}

.pop .down-container {
  padding: 0 24rpx;
}

.pop .comment {
  color: #555;
}

.pop .comment-input {
  width: 100%;
}

.pop .but-handle {
  border-radius: 999rpx;
  box-sizing: border-box;
  color: #FFFFFF;
  font-size: large;
  padding: 10px 18px;
  width: 90%;
  margin: 48rpx auto;
  display: flex;
  justify-content: center;
}

.enable {
  background: #5E5DF0;
  box-shadow: #5E5DF0 0 10px 20px -10px;
}

.enable:active {
  background: #3d3ddb;
  box-shadow: #5E5DF0 0 10px 20px -10px;
}

.disable {
  background-color: #93A3D6;
}