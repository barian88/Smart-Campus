.header {
  display: flex;
  justify-content: center;
}

.header image {
  height: 700rpx;
  width: 700rpx;
}

.but-login {
  background-image: linear-gradient(92.88deg, #455EB5 9.16%, #5643CC 43.89%, #673FD7 64.72%);
  border-radius: 999rpx;
  box-sizing: border-box;
  color: #FFFFFF;
  font-size: larger;
  font-weight: bold;
  padding: 24rpx 0;
  text-align: center;
  text-shadow: rgba(0, 0, 0, 0.25) 0 3px 8px;
  transition: all .5s;
  width: 50%;
  margin: auto;
  text-align: center;

}

.but-login:active {
  box-shadow: rgba(80, 63, 205, 0.5) 0 1px 30px;
  transition-duration: .1s;
}

.background {
  height: 100vh;
  width: 100%;
  position: absolute;
  top: 0;
  z-index: -1;
}

.container {
  position: relative;
  top: 200rpx;
}